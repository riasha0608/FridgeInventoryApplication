<!DOCTYPE html>
<html lang="en" class="orange lighten-5">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fridge Inventory</title>

    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <link rel="stylesheet" href="/stylesheets/fridgeStyle.css">
    <link rel="stylesheet" href="/stylesheets/navBarStyle.css">

</head>

<body>
    <%- include('partials/navbar') %>

    <!-- Actual page content! -->
    <div class="container">
        <div class="section">
            <a class="btn-small waves-effect waves-light blue darken-4 white-text" href="/">
                <i class="material-icons left">arrow_back</i>Return to Home Page
            </a>
            <h1>Fridge inventory:</h1>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Meal</th>
                        <th>Expiration Date</th>
                        <th>Quantity</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < fridgelist.length; i++) {%>
                    <tr>
                        <td><%= fridgelist[i].food_item_name %></td>
                        <td><%= fridgelist[i].food_category_name %></td>
                        <td><%= fridgelist[i].meal_name %></td>
                        <td><%= fridgelist[i].expiration_date_formatted %></td>
                        <td><%= fridgelist[i].quantity_and_unit %></td>
                        <td>
                            <a class="btn-small waves-effect waves-light cyan" href="/fridge/<%= fridgelist[i].food_item_id %>">
                                <i class="material-icons right">edit</i>
                                Info/Edit
                            </a>
                            <a class="btn-small waves-effect waves-light indigo" href="/fridge/<%=fridgelist[i].food_item_id %>/delete"><i
                                class="material-icons right">delete</i>
                                Delete
                            </a>
                        </td>
                    </tr>                
                    <% } %>
                </tbody>
            </table>
        </div>

        <div class="section" id="stuffAdd">
            <h1>Add items:</h1>
            <form id = "addForm" method="post" action="/fridge">
                <div class="row">
                    <div class="input-field col s6">
                        <label for="nameInput">Food item name:</label>
                        <input type="text" name="food_item_name" id="name" class="validate" data-length="32" required>
                    </div>
                    <div class="input-field col s6">
                        <select id="categoryInput" name="category_id" required>
                            <option value="" disabled selected>Choose your food category</option>
                            <% for (let i = 0; i < foodCategoriesList.length; i++) { %>
                                <option value=<%=foodCategoriesList[i].food_category_id %>><%= foodCategoriesList[i].food_category_name %></option>
                            <% } %>
                        </select>
                        <label for="categoryInput">Food category:</label>
                    </div>
                <div>
                <div class="row">
                    <div class="input-field col s6">
                        <select id="mealInput" name="meal_id">
                            <option value="" disabled selected>Choose your meal:</option>
                            <% for (let i = 0; i < mealsList.length; i++) { %>
                                <option value=<%=mealsList[i].meal_id %>><%= mealsList[i].meal_name %></option>
                            <% } %>
                        </select>
                        <label for="mealInput">Meal:</label>
                    </div>
                    <div class="expiration_date input-field col s6">
                        <label for="expiration_date">Expiration Date:</label>
                        <input type="date" name="expiration_date" id="expiration_date" required>
                    </div>
                <div>
                <div class="row">
                    <div class="quantity_unit input-field col s6">
                        <label for="quantityInput">Food item quantity and unit:</label>
                        <input type="text" name="quantity_and_unit" id="quantity" required>
                    </div>
                </div>
                
                <div class="input-field col s8">
                        <button class="btn waves-effect waves-light blue darken-4" type="submit">
                            <i class="material-icons right">send</i>
                            Submit
                        </button>
                </div> 
            </form>
        </div>
    </div>

    <script src="/scripts/setExpirationDate.js"></script>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- initialize Materialize elements -->
    <script src="/scripts/materializeAutoInit.js"></script>

</body>

</html>